{
  "name": "vismooc-web-server",
  "version": "0.5.0",
  "description": "Let's Fight!",
  "repository": {
    "type": "git",
    "url": "https://github.com/HKUST-VISLab/vismooc-web-server"
  },
  "main": "dist/index.js",
  "scripts": {
    "clean": "node tools/build clean",
    "lint": "tslint -p . --force --format verbose",
    "build": "npm run clean && tsc -p . || echo done",
    "test": "npm run lint && npm run build && nyc ava",
    "release-patch": "standard-version && git push --follow-tags origin master",
    "release-minor": "standard-version -- --release-as minor && git push --follow-tags origin master",
    "release-major": "standard-version -- --release-as major && git push --follow-tags origin master"
  },
  "author": "zhutian",
  "devDependencies": {
    "@types/express": "^4.0.35",
    "@types/ioredis": "0.0.23",
    "@types/koa": "^2.0.39",
    "@types/koa-router": "^7.0.22",
    "@types/mongoose": "^4.7.13",
    "@types/morgan": "^1.7.32",
    "@types/mysql": "0.0.33",
    "@types/nock": "^8.2.1",
    "@types/node": "7.0.22",
    "@types/ramda": "0.0.10",
    "@types/supertest": "^2.0.0",
    "ava": "^0.19.1",
    "nock": "^9.0.13",
    "nyc": "^10.3.2",
    "shelljs": "^0.7.7",
    "standard-version": "^4.0.0",
    "supertest": "^3.0.0",
    "tslint": "^5.3.2",
    "typescript": "^2.3.3"
  },
  "dependencies": {
    "d3-force": "^1.0.6",
    "ioredis": "^3.0.0",
    "kcors": "^2.2.0",
    "koa": "^2.2.0",
    "koa-bodyparser-ts": "0.0.8",
    "koa-router": "^7.2.0",
    "koa-static": "^3.0.0",
    "mongoose": "^4.10.2",
    "morgan": "^1.8.2",
    "mysql": "^2.13.0",
    "ramda": "^0.24.0"
  },
  "ava": {
    "files": [
      "dist/**/*.spec.js"
    ]
  },
  "nyc": {
    "include": [
      "dist/src/**/*.js"
    ],
    "exclude": [
      "dist/src/public/**/*.js",
      "dist/**/*.spec.js"
    ],
    "extensions": [
      ".ts"
    ],
    "reporter": [
      "lcov",
      "text"
    ],
    "cache": true,
    "check-coverage": false
  }
}
